{
  "name": "eccy",
  "version": "0.0.4",
  "description": "Yet Another ECS Library",
  "keywords": [
    "ECS",
    "Entity",
    "Component",
    "System"
  ],
  "license": "LGPL-3.0-or-later",
  "author": "@woubuc <eccy@woubuc.be>",
  "repository": "https://github.com/woubuc/eccy",
  "homepage": "https://github.com/woubuc/eccy/blob/main/README.md",
  "bugs": "https://github.com/woubuc/eccy/issues",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "dist/index.d.ts",
      "default": "dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/testbed/**/*"
  ],
  "scripts": {
    "build": "trash dist/* && tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/testbed/entry.js\"",
    "test": "pnpm build && c8 \"ava dist/**/*.test.js\" --src=dist --all",
    "preinstall": "npx only-allow pnpm",
    "prepack": "pnpm test && pnpm build"
  },
  "engines": {
    "node": ">=18 <20"
  },
  "dependencies": {
    "@woubuc/multimap": "^2.1.0",
    "chalk": "^5.3.0",
    "date-fns": "^2.30.0",
    "eventemitter3": "^5.0.1",
    "on-change": "^4.0.2",
    "stringify-object": "^5.0.0",
    "tslib": "^2.6.2",
    "type-fest": "^4.3.1",
    "typescript-tuple": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/stringify-object": "^4.0.2",
    "ava": "^5.3.1",
    "c8": "^8.0.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "trash-cli": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.0.4",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
